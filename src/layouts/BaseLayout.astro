---
const { title = "the low-speed spoon", theme = "" } = Astro.props;
---
<html lang="en">


  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}src/styles/base.css`} />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}src/styles/themes.css`} />
  </head>


  <body class={`${theme}`}>
    <header class="w-full">
      <div class="mx-auto max-w-6xl px-4 py-4 flex items-center justify-between">
      <a href={import.meta.env.BASE_URL} class="text-sm lowercase tracking-widest">the low-speed spoon</a>
        <nav class="text-sm">
          <ul class="flex gap-6">
            <li><a class="hover:underline" href={`${import.meta.env.BASE_URL}about/`}>about</a></li>
            <li><a class="hover:underline" href={`${import.meta.env.BASE_URL}portfolio/`}>portfolio</a></li>
            <li><a class="hover:underline" href={`${import.meta.env.BASE_URL}blog/`}>newsletter</a></li>
            <li><a class="hover:underline" href={`${import.meta.env.BASE_URL}contact/`}>contact</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <main class="min-h-[70vh]">
      <slot />
    </main>

    <footer class="mt-16 border-t">
      <div class="mx-auto max-w-6xl px-4 py-8 text-xs text-gray-600 flex items-center justify-between">
        <p>Â© {new Date().getFullYear()} the low-speed spoon</p>
        <slot name="newsletter" />
      </div>
    </footer>
  </body>
</html>
