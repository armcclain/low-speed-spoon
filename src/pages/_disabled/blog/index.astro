---
import Layout from '../../layouts/BaseLayout.astro';
const posts = await Astro.glob('../../content/blog/*.md');
---
<Layout title="Blog â€” the low-speed spoon" theme="theme-blog">
  <section class="mx-auto max-w-3xl px-4 py-16">
    <h1 class="text-xl font-medium mb-6">newsletter</h1>
    <ul class="space-y-4">
      {posts
        .sort((a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date))
        .map((post) => (
          <li>
            <a class="block p-4 border rounded-2xl hover:shadow-md transition" href={post.url}>
              <h3 class="text-base font-medium">{post.frontmatter.title}</h3>
              {post.frontmatter.date && <p class="text-xs text-gray-600">{new Date(post.frontmatter.date).toLocaleDateString()}</p>}
              {post.frontmatter.excerpt && <p class="text-sm text-gray-700 mt-1">{post.frontmatter.excerpt}</p>}
            </a>
          </li>
      ))}
    </ul>
  </section>
</Layout>
